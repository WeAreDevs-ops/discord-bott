
<%- include('layout', { title: 'Dashboard - Roblox Tools Bot', showSidebar: true, body: `
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h2 class="mb-2" style="color: var(--discord-text-normal); font-weight: 600;">
                        <i class="fas fa-tachometer-alt me-3" style="color: var(--discord-blurple);"></i>
                        Dashboard
                    </h2>
                    <p class="text-muted mb-0">Manage your Discord servers and bot settings</p>
                </div>
                <div class="stats-mini d-none d-md-flex gap-3">
                    <div class="stat-mini">
                        <i class="fas fa-server text-blurple"></i>
                        <span>${guilds.length} Server${guilds.length !== 1 ? 's' : ''}</span>
                    </div>
                    <div class="stat-mini">
                        <i class="fas fa-robot text-green"></i>
                        <span>Online</span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card modern-card">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-server me-3" style="font-size: 1.2rem;"></i>
                                <h5 class="card-title mb-0">Your Servers</h5>
                            </div>
                            <span class="badge bg-discord-primary px-3 py-2">${guilds.length} Total</span>
                        </div>
                        <div class="card-body">
                            ${guilds.length > 0 ? `
                                <div class="row g-4">
                                    ${guilds.map(guild => `
                                        <div class="col-md-6 col-xl-4">
                                            <div class="server-card h-100" data-guild-id="${guild.id}">
                                                <div class="server-header">
                                                    <div class="server-avatar">
                                                        ${guild.icon ? `
                                                            <img src="https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png" 
                                                                 alt="${guild.name}" class="server-icon">
                                                        ` : `
                                                            <div class="server-icon-default">
                                                                <i class="fas fa-server"></i>
                                                            </div>
                                                        `}
                                                        <div class="server-status ${guild.botIsIn ? 'online' : 'offline'}"></div>
                                                    </div>
                                                    <div class="server-info">
                                                        <h6 class="server-name">${guild.name}</h6>
                                                        <div class="server-badges">
                                                            ${guild.owner ? '<span class="badge badge-owner"><i class="fas fa-crown me-1"></i>Owner</span>' : '<span class="badge badge-admin"><i class="fas fa-shield-alt me-1"></i>Admin</span>'}
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="server-actions">
                                                    ${guild.botIsIn ? `
                                                        <a href="/guild/${guild.id}" class="btn btn-primary btn-configure">
                                                            <i class="fas fa-cog me-2"></i>
                                                            Configure
                                                        </a>
                                                        <div class="bot-status-indicator success">
                                                            <i class="fas fa-check-circle me-2"></i>
                                                            Bot Active
                                                        </div>
                                                    ` : `
                                                        <a href="/auth/discord/bot-invite?guild_id=${guild.id}" class="btn btn-success btn-add-bot add-bot-btn" 
                                                           data-guild-id="${guild.id}" data-guild-name="${guild.name}">
                                                            <i class="fas fa-plus me-2"></i>
                                                            Add Bot
                                                        </a>
                                                        <div class="bot-status-indicator warning">
                                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                                            Bot Not Added
                                                        </div>
                                                    `}
                                                </div>
                                            </div>
                                        </div>
                                    `).join('')}
                                </div>
                            ` : `
                                <div class="empty-state">
                                    <div class="empty-icon">
                                        <i class="fas fa-server"></i>
                                    </div>
                                    <h5>No Servers Found</h5>
                                    <p class="text-muted mb-4">
                                        You don't have permission to manage any servers with this bot, or the bot hasn't been added to your servers yet.
                                    </p>
                                    <a href="https://discord.com/api/oauth2/authorize?client_id=${process.env.DISCORD_CLIENT_ID}&permissions=8&scope=bot%20applications.commands" 
                                       target="_blank" class="btn btn-primary btn-lg">
                                        <i class="fas fa-plus me-2"></i>
                                        Add Bot to Server
                                    </a>
                                </div>
                            `}
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Quick Stats Row -->
            ${guilds.length > 0 ? `
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-server"></i>
                            </div>
                            <div class="stat-content">
                                <h3>${guilds.length}</h3>
                                <p>Total Servers</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-robot"></i>
                            </div>
                            <div class="stat-content">
                                <h3>${guilds.filter(g => g.botIsIn).length}</h3>
                                <p>Active Bots</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-cog"></i>
                            </div>
                            <div class="stat-content">
                                <h3>${guilds.filter(g => g.botIsIn).length}</h3>
                                <p>Configured</p>
                            </div>
                        </div>
                    </div>
                </div>
            ` : ''}
        </div>
    </div>
</div>

<style>
    .stats-mini {
        display: flex;
        gap: 1rem;
    }

    .stat-mini {
        display: flex;
        align-items: center;
        background: rgba(88, 101, 242, 0.1);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        border: 1px solid rgba(88, 101, 242, 0.2);
    }

    .stat-mini i {
        margin-right: 0.5rem;
        font-size: 0.9rem;
    }

    .stat-mini span {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--discord-text-normal);
    }

    .modern-card {
        background: var(--discord-bg-secondary);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.15);
    }

    .server-card {
        background: var(--discord-bg-primary);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .server-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--discord-blurple), #4752C4);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .server-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 35px rgba(0, 0, 0, 0.25);
        border-color: rgba(88, 101, 242, 0.3);
    }

    .server-card:hover::before {
        opacity: 1;
    }

    .server-header {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }

    .server-avatar {
        position: relative;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .server-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        object-fit: cover;
        border: 2px solid rgba(255, 255, 255, 0.1);
    }

    .server-icon-default {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--discord-blurple), #4752C4);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        border: 2px solid rgba(255, 255, 255, 0.1);
    }

    .server-status {
        position: absolute;
        bottom: -2px;
        right: -2px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        border: 2px solid var(--discord-bg-primary);
    }

    .server-status.online {
        background: var(--discord-green);
        animation: pulse-green 2s infinite;
    }

    .server-status.offline {
        background: var(--discord-text-muted);
    }

    @keyframes pulse-green {
        0%, 100% { box-shadow: 0 0 0 0 rgba(87, 242, 135, 0.7); }
        70% { box-shadow: 0 0 0 10px rgba(87, 242, 135, 0); }
    }

    .server-info {
        flex-grow: 1;
        min-width: 0;
    }

    .server-name {
        color: var(--discord-text-normal);
        font-weight: 600;
        margin-bottom: 0.5rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .server-badges {
        display: flex;
        gap: 0.5rem;
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
    }

    .badge-owner {
        background: linear-gradient(135deg, var(--discord-yellow), #E0B54D);
        color: var(--discord-darker);
    }

    .badge-admin {
        background: linear-gradient(135deg, var(--discord-blurple), #4752C4);
        color: var(--discord-white);
    }

    .server-actions {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn-configure, .btn-add-bot {
        width: 100%;
        padding: 0.75rem 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-configure {
        background: linear-gradient(135deg, var(--discord-blurple), #4752C4);
        border: none;
        color: var(--discord-white);
    }

    .btn-configure:hover {
        background: linear-gradient(135deg, #4752C4, var(--discord-blurple));
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(88, 101, 242, 0.4);
    }

    .btn-add-bot {
        background: linear-gradient(135deg, var(--discord-green), #3BA55D);
        border: none;
        color: var(--discord-darker);
    }

    .btn-add-bot:hover {
        background: linear-gradient(135deg, #3BA55D, var(--discord-green));
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(87, 242, 135, 0.4);
    }

    .bot-status-indicator {
        display: flex;
        align-items: center;
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
    }

    .bot-status-indicator.success {
        background: rgba(87, 242, 135, 0.1);
        color: var(--discord-green);
        border: 1px solid rgba(87, 242, 135, 0.2);
    }

    .bot-status-indicator.warning {
        background: rgba(254, 231, 92, 0.1);
        color: var(--discord-yellow);
        border: 1px solid rgba(254, 231, 92, 0.2);
    }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
    }

    .empty-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--discord-blurple), #4752C4);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 2rem;
    }

    .empty-state h5 {
        color: var(--discord-text-normal);
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .stat-card {
        background: var(--discord-bg-secondary);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--discord-blurple), #4752C4);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .stat-content h3 {
        color: var(--discord-text-normal);
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 0.25rem;
    }

    .stat-content p {
        color: var(--discord-text-muted);
        margin: 0;
        font-size: 0.875rem;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        .stats-mini {
            display: none;
        }
        
        .server-card {
            padding: 1rem;
        }
        
        .server-header {
            margin-bottom: 1rem;
        }
    }
</style>

<script>
    function handleBotInvite(guildId) {
        const inviteWindow = window.open(event.target.href, '_blank', 'width=500,height=700');
        
        let checkCount = 0;
        const maxChecks = 10;

        const checkBotPresence = setInterval(async () => {
            checkCount++;

            try {
                const response = await fetch(\`/api/guild/\${guildId}/bot-presence\`);
                const data = await response.json();

                if (data.botPresent) {
                    clearInterval(checkBotPresence);
                    updateServerCard(guildId, true);
                    showNotification('🎉 Bot added successfully! You can now configure it.', 'success');
                } else if (checkCount >= maxChecks) {
                    clearInterval(checkBotPresence);
                }
            } catch (error) {
                console.error('Error checking bot presence:', error);
                if (checkCount >= maxChecks) {
                    clearInterval(checkBotPresence);
                }
            }
        }, 3000);

        event.preventDefault();
        return false;
    }

    function updateServerCard(guildId, botPresent) {
        const serverCard = document.querySelector(\`[data-guild-id="\${guildId}"]\`);
        if (!serverCard) return;

        const actionsContainer = serverCard.querySelector('.server-actions');
        const statusIndicator = serverCard.querySelector('.server-status');

        if (botPresent && actionsContainer) {
            actionsContainer.innerHTML = \`
                <a href="/guild/\${guildId}" class="btn btn-primary btn-configure">
                    <i class="fas fa-cog me-2"></i>
                    Configure
                </a>
                <div class="bot-status-indicator success">
                    <i class="fas fa-check-circle me-2"></i>
                    Bot Active
                </div>
            \`;
            
            if (statusIndicator) {
                statusIndicator.className = 'server-status online';
            }
        }
    }

    function showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.style.cssText = \`
            position: fixed;
            top: 90px;
            right: 20px;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            color: white;
            font-weight: 500;
            z-index: 9999;
            transition: all 0.3s ease;
            max-width: 400px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            \${type === 'success' ? 'background: linear-gradient(135deg, var(--discord-green), #3BA55D);' : 'background: linear-gradient(135deg, var(--discord-blurple), #4752C4);'}
        \`;
        notification.innerHTML = \`
            <div style="display: flex; align-items: center;">
                <i class="fas fa-\${type === 'success' ? 'check-circle' : 'info-circle'} me-2"></i>
                \${message}
            </div>
        \`;

        document.body.appendChild(notification);

        setTimeout(() => {
            notification.style.opacity = '0';
            notification.style.transform = 'translateX(100%)';
            setTimeout(() => {
                if (document.body.contains(notification)) {
                    document.body.removeChild(notification);
                }
            }, 300);
        }, 5000);
    }

    // Add click handlers for bot invite buttons
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.add-bot-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                const guildId = this.getAttribute('data-guild-id');
                handleBotInvite(guildId);
            });
        });
    });
</script>
` }) %>
